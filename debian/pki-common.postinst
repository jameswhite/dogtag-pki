#!/bin/sh
set -e

. /usr/share/debconf/confmodule

OUT=/dev/null

if [ "$1" = configure ]; then
    # lets give them a user/group in all cases.
    if ! getent passwd pkiuser  > $OUT; then
        adduser --quiet --system --home /var/lib \
            --shell /usr/sbin/nologin --group \
            --no-create-home --gecos "CA System User" \
            pkiuser > $OUT
    fi
fi

