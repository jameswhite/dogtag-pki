            document.write("</td><td width=\"99%\">\n");
            document.write("<font size=\"-1\" face=\"PrimaSans BT, Verdana, sans-serif\">\n");
            document.write(reason[i]+"</font></td></tr>\n");
        }
    }
    document.write("</table>\n");
}
