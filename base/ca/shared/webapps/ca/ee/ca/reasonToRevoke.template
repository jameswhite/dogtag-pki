    var activeChoice = new Array(1, 1, 0, 1, 1, 1, 0, 0, 0, 1, 0);
    document.write("<table border=\"0\" cellspacing=\"0\" cellpadding=\"0\">\n");
    for (var i = 0; i < reason.length; i++) {
